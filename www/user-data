    - echo "blacklist floppy" | tee /etc/modprobe.d/blacklist-floppy.conf
    - rmmod floppy
    - update-initramfs -u
    - touch /etc/cloud/cloud-init.disabled
power_state:
    mode: poweroff
    message: Shutting Down
    timeout: 5
    condition: True
